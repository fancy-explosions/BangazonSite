@model Bangazon.Models.OrderViewModels.OrderHistoryViewModel

@{
    ViewData["Title"] = "OrderHistory";
}

<h1>Order History</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Order.DateCreated)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Order.PaymentType.AccountNumber)
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.OrderHistory)
        {
        <tr>
            <td>
                <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.OrderId">
                    @Html.DisplayFor(model => item.OrderId)
                </a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PaymentType.AccountNumber)
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
